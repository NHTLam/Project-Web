{% extends "base.html.twig" %}
{% block body %}
<div class="">
    <h1 class=""> {{ assignment.title }} </h1>
    <div class="row">
        <div class="col">
            <img src="{{ asset('file/assignment/'~assignment.file) }}">
        </div>
        <div class="col">
            <h4>Deadline: {{ assignment.Datesubmit | date('d/m/Y') }} </h4>
            <h4>Course List: </h4>
            {% if assignment.student != null %}
                {% for student in assignment.student %}
                    <a href="{{ path('view_student_by_id', {'id': student.id })}}">
                        <h5> {{ student.name }} </h5>
                    </a>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}