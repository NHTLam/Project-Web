{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>Grade</th>
                    <th>Comment</th>
                    <th>Date Feedback</th>
                    <th>Assignment</th>
                    <th>Menu</th>
                </tr>
            </thead>
                {% for f in assignments %}
                    <tr>
                        <td>{{ f.grade }}</td>
                        <td>{{ f.comment }}</td>
                        <td>{{ f.datefeedback | date('d/m/Y') }}</td>
                        <td>{{ f.title }}</td>
                        <td>
                            <a href="{{ path('edit_feedback', {'id': f.id})}}">Edit</a>               
                            {# <a href="{{ path('delete_feedback', {'id': f.id})}}"
                            onclick = "return confirm('Do you want to delete this assigmemt');"
                            >Delete</a>   #}
                        </td>
                    </tr>
                {% endfor %}                
        </table>
    </div>
{% endblock %}
