{% form_theme formCourse 'bootstrap_5_layout.html.twig' %}
{% extends 'base.html.twig' %}

{% block title %}{{title}} page{% endblock %}

{% block body %}
{% if is_granted('ROLE_ADMIN') %}
<div class = "container-fluid row">
    <div class = "col-lg-2">
        <ul class = "navbar-nav">
            <a href="{{path('view_course')}}">Courses management</a>
            <a href="{{path('view_class')}}">Classes management</a>
            <a href="{{path('app_register')}}">Create Account</a>
        </ul>
    </div>
    <div class = "col-lg-10">
        <h1 class = "text text-primary">{{title}} Course</h1>
        {{form(formCourse)}}
    </div>
</div>
{% endif %}
{% endblock %}
