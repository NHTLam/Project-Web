{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-flush col-sm-10 ml-3 mt-3 asm">
        <table class="table">
            <thead>
                <tr>
                    <th>Assignment</th>
                    <th>Deadline</th>
                    <th>Grade</th>
                    <th>Comment</th>
                    <th>Date Feedback</th>                    
                    <th></th>
                </tr>
            </thead>
                {% for f in assignments %}
                    <tr>
                        <td>{{ f.title }}</td>
                        <td>{{ f.deadline | date('d/m/Y')}}</td>
                        <td>{{ f.grade }}</td>
                        <td>{{ f.comment }}</td>
                        <td>
                            {% if f.datefeedback != null %}
                                {{ f.datefeedback | date('d/m/Y') }}
                            {% endif %}                            
                        </td>                        
                        <td>
                            {% if f.grade == null %}
                            <a class="btn btn-outline-primary addbtn" href="{{ path('add_feedback', {'id': f.id})}}">Add feedback</a>            
                            {% else %}
                                <a class="btn btn-outline-warning addbtn" href="{{ path('edit_feedback', {'id': f.id})}}">Edit feedback</a>               
                                {# <a href="{{ path('delete_feedback', {'id': f.id})}}"
                                onclick = "return confirm('Do you want to delete this assigmemt');"
                                >Delete</a>   #}
                            {% endif %}
                            
                           
                        </td>
                    </tr>
                {% endfor %}                
        </table>
    </div>
{% endblock %}
