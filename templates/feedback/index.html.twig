{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <table>
            <thead>
                <tr>
                    <th>Grade</th>
                    <th>Comment</th>
                    <th>Date Feedback</th>
                    <th>Assignment</th>
                    <th>Menu</th>
                </tr>
            </thead>
            
            <tbody>
                {% for feedback in feedbacks %}
                    <tr>
                        <td>{{ feedback.grade }}</td>
                        <td>{{ feedback.comment }}</td>
                        <td>{{ feedback.Datefeedback | date('d/m/Y') }}</td>
                        <td>{{ feedback.assignment }}</td>
                        <td>
                            <a href="{{ path('edit_feedback', {'id': feedback.id})}}">Edit</a>               
                            <a href="{{ path('delete_feedback', {'id': feedback.id})}}"
                            onclick = "return confirm('Do you want to delete this assigmemt');"
                            >Delete</a>  
                        </td>
                    </tr>
                {% endfor %}                
            </tbody>
        </table>
    </div>
{% endblock %}
