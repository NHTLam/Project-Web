<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} Academic Portal {% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block navigation %}
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a class="nav-link active" href="{{ path('view_course_list')}}">Course</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('view_lecuture_list')}}">Lecture</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="{{ path('view_class_list')}}">Class</a>
                </li>
            </ul>
        {% endblock %}
        {% block message %}
            {% for error in app.session.flashBag.get('Error') %}
            <p class="alert alert-danger">{{ error }} </p>
            {% endfor %}
            {% for success in app.session.flashBag.get('Success') %}
                <p class="alert alert-success">{{ success }} </p>
            {% endfor %}
        {% endblock %}

        {% block body %}{% endblock %}
    </body>
</html>
